    hikari:
      username: 
      password: 
      maximum-pool-size: 50
  mvc:
    view:
      prefix: /WEB-INF/view/
      suffix: .jsp
  lifecycle:
    timeout-per-shutdown-phase: 30s
#  autoconfigure:
